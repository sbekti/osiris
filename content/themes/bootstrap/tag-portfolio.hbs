{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

<div class="listing" role="document">

  <div class="entry">

    <h1>{{tag.name}}</h1>
    <p class="lead">
      {{#if tag.description}}
        {{tag.description}}
      {{else}}
        A {{pagination.total}}-post collection
      {{/if}}
    </p>

    <main class="content" role="main">
      <div class="container-fluid portfolio-container">
        {{#grouped_each 3 posts}}
          <div class="row portfolio-row">
            {{#each this }}
              <div class="col-md-4 portfolio-item">
                <a href="{{url}}">
                  <img class="img-responsive" src="{{image}}" alt="{{{meta_title}}}">
                </a>
                <header class="post-header">
                  <h2 class="post-title"><a href="{{url}}">{{meta_title}}</a></h2>
                </header>
                <section class="portfolio-excerpt">
                  <p>{{meta_description}}</p>
                </section>
              </div>
            {{/each}}
          </div>
        {{/grouped_each}}
      </div>

      {{! Previous/next page links - displayed on every page }}
      {{#if pagination.prev}}
        {{pagination}}
      {{else}}
        {{#if pagination.next}}
          {{pagination}}
        {{/if}}
      {{/if}}
    </main>

  </div>

</div>
